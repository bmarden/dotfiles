#
# .zprofile
#

# SETUP HOMEBREW PATH
[ -d "/opt/homebrew/bin/" ] &&
  _BREW="/opt/homebrew/bin" ||
  _BREW="/usr/local/bin"

# INITIALIZE CLI TOOLS FUNCTIONS
[ -n "$(command -v $_BREW/brew)" ] &&
  eval "$($_BREW/brew shellenv)"

# CHEZMOI COMPLETIONS
[ -n "$(command -v chezmoi)" ] &&
  eval "$(chezmoi completion zsh)"

# Set path
# export PATH="$PATH:$XDG_DATA_HOME/npm/bin:$XDG_DATA_HOME/../bin:"
path+=($XDG_DATA_HOME/npm/bin $HOME/.local/bin $HOME/Library/Android/sdk/emulator \
      $HOME/Library/Android/sdk/platform-tools \
      /Applications/Android Studio.app/Contents/jre/Contents/Home/bin)

typeset -aU path;
