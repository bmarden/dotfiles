# vim: syntax=gitconfig

[user]
  email = {{ .email }}
  name = Ben Marden
  signingKey = {{- (onepasswordDetailsFields "Mac SSH Key").public_key.value }}
[commit]
  gpgsign = true
[gpg]
  format = ssh
[gpg "ssh"]
  allowedSignersFile = ~/.config/git/allowed_signers
[includeIf "gitdir:~/code/ik/"]
  path = ~/.config/git/config-ik 
[core]
  editor = nvim
[diff]
  tool = nvim
[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code --wait $MERGED
[diff]
  tool = vscode
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[pager]
  branch = false
  stash = false
[init]
  defaultBranch = main