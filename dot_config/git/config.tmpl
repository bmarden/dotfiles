# vim: syntax=gitconfig

[user]
  email = {{ .email }}
  name = Ben Marden
  {{- if not .is_work }}
  signingKey = {{- (onepasswordDetailsFields "Mac SSH Key").public_key.value }}
  {{- end }}
[commit]
  gpgsign = {{ if not .is_work }}true{{ else }}false{{ end }}
[gpg]
  format = ssh
[gpg "ssh"]
  allowedSignersFile = ~/.config/git/allowed_signers
[core]
  editor = nvim
[diff]
  tool = nvim
[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code --wait $MERGED
[diff]
  tool = vscode
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[pager]
  branch = false
  stash = false
[init]
  defaultBranch = main