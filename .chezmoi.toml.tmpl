{{- $is_work := promptBoolOnce . "is_work" "Is this a work machine?" -}}
{{- $email := promptStringOnce . "email" "Email address" -}}

[data]
  email = {{ $email | quote }}
  is_work = {{ $is_work }}
[git]
  autoCommit = true
[edit]
  command = "nvim"
[diff]
  command = "code"
  args = ["--wait",  "--diff", "{{ "{{" }} .Target {{ "}}" }}", "{{ "{{" }} .Destination {{ "}}" }}"]
[merge]
  command = "nvim"
  args = ["-d", "{{ "{{" }} .Destination {{ "}}" }}", "{{ "{{" }} .Source {{ "}}" }}", "{{ "{{" }} .Target {{ "}}" }}"]
